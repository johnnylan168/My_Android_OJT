<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.rd26.my_android_ojt">

    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_CONTACTS" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:hardwareAccelerated="false"
        android:largeHeap="true">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".CalculatorActivity"
            android:label="@string/calculator" />
        <activity
            android:name=".ListViaVariableActivity"
            android:label="@string/listViaVariable" />
        <activity android:name=".ListItemDetailActivity"
            android:label="@string/listItem"/>
        <activity
            android:name=".ListViaDbActivity"
            android:label="@string/listViaDb" />
        <activity
            android:name=".ContactActivity"
            android:label="@string/contact" />
        <activity
            android:name=".CalenderActivity"
            android:label="@string/calender" />
        <activity
            android:name=".PicDownloadActivity"
            android:label="@string/picDownload" />
        <activity android:name=".ShowPicItemActivity"
            android:theme="@style/PicItemTheme"></activity>
    </application>

</manifest>